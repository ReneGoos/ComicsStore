<Window x:Class="ComicsLibrary.Views.StoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:ComicsLibrary.Helpers"
        xmlns:local="clr-namespace:ComicsLibrary.Views"
        xmlns:control="clr-namespace:ComicsLibrary.UserControls"
        xmlns:vm="clr-namespace:ComicsLibrary.EditModels"
        mc:Ignorable="d"
        Title="Story"
        Height="441"
        Width="954"
        DataContext="{Binding Source={StaticResource Locator}, Path=ComicsViewModel}">
    <Window.Resources>
        <helpers:ArrayConverter x:Key="ArrayConverter"/>
        <helpers:RoleTypesConverter x:Key="RoleTypesConverter"/>
    </Window.Resources>
    <DockPanel DataContext="{Binding StoryView}">
        <DockPanel DockPanel.Dock="Top" 
                   Background="LightGray" 
                   Grid.IsSharedSizeScope="True">
            <control:SimpleToolbar Items="{Binding Items}"
                                   Id = "{Binding Item.Id, Mode=TwoWay}" 
                                   IsClean ="{Binding IsClean}"
                                   IsDirty ="{Binding IsDirty}"
                                   Filter = "{Binding ItemFilter, Mode=TwoWay}"
                                   NewCommand="{Binding NewCommand}"
                                   SaveCommand="{Binding SaveCommand}"
                                   CancelSaveCommand="{Binding CancelSaveCommand}"
                                   />
        </DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Margin="6" 
                    Name="OkButton" Click="OkButton_Click">
                Ok
            </Button>
            <Button Grid.Column="3"
                    Margin="6"
                    Name="CancelButton" Click="CancelButton_Click">
                Cancel
            </Button>
        </Grid>
        <Grid DockPanel.Dock="Bottom" 
              DataContext="{Binding Item}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="1"
                           Grid.Row="1" 
                           Content="{Binding Id, Mode=OneWay}"/>

                <Label Grid.Column="1" 
                           Grid.Row="3">
                    Name
                </Label>
                <TextBox Grid.Column="3" 
                             Grid.Row="3"
                             Grid.ColumnSpan="3"
                             Text="{Binding Name, Mode=TwoWay}"/>
                <Label Grid.Column="1" 
                           Grid.Row="5">
                    Code
                </Label>
                <ComboBox Grid.Column="3"  
                              Grid.Row="5"
                              SelectedValue = "{Binding CodeId}" 
                              SelectedValuePath = "Id" 
                              DisplayMemberPath = "Name" 
                              IsEditable="True" 
                              ItemsSource="{Binding Path=DataContext.CodeView.Items, RelativeSource={RelativeSource AncestorType=Window}}"
                              IsSynchronizedWithCurrentItem ="False"
                              >
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
                <Button Grid.Row ="5"
                        Grid.Column="5"
                        Command="{Binding DataContext.AddCodeToStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        >
                    Add
                </Button>

                <Label Grid.Column="1"
                       Grid.Row="7">
                    Type, Number
                </Label>
                <ComboBox Grid.Column="3"
                          Grid.Row="7"
                          SelectedValue = "{Binding StoryType, Mode=TwoWay}"
                          IsEditable="True" 
                          ItemsSource="{Binding Path=DataContext.StoryTypes, RelativeSource={RelativeSource AncestorType=Window}}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
                <TextBox Grid.Column="5"  
                         Grid.Row="7" 
                         Text="{Binding StoryNumber, Mode=TwoWay}"/>

                <Label Grid.Column="1"
                       Grid.Row="9">
                    ExtraInfo
                </Label>
                <TextBox Grid.Column="3"  
                         Grid.Row="9" 
                         Grid.ColumnSpan="3"
                         Text="{Binding ExtraInfo, Mode=TwoWay}"/>

                <Label Grid.Column="1"
                       Grid.Row="11">
                    Pages, Language
                </Label>
                <TextBox Grid.Column="3"  
                         Grid.Row="11" 
                         Text="{Binding Pages, Mode=TwoWay}"/>
                <ComboBox Grid.Column="5"
                              Grid.Row="11"
                              SelectedValue = "{Binding Language, Mode=TwoWay}"
                              SelectedValuePath="Id"
                              DisplayMemberPath = "Name" 
                              IsEditable="True" 
                              ItemsSource="{Binding Path=DataContext.Languages, RelativeSource={RelativeSource AncestorType=Window}}"
                              IsSynchronizedWithCurrentItem ="False">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <Label Grid.Column="1"
                           Grid.Row="13">
                    Remark
                </Label>
                <TextBox Grid.Column="3"  
                             Grid.Row="13" 
                             Grid.ColumnSpan="3"
                             Text="{Binding Remark, Mode=TwoWay}"/>

                <Label Grid.Column="1" 
                           Grid.Row="15">
                    Origin Story
                </Label>
                <ComboBox Grid.Column="3"
                              Grid.Row="15" 
                              Grid.ColumnSpan="3"
                              SelectedValue = "{Binding OriginStoryId, Mode=TwoWay}" 
                              SelectedValuePath = "Id" 
                              DisplayMemberPath = "Name" 
                              IsEditable="True" 
                              ItemsSource="{Binding Path=DataContext.StoryView.OriginStories, RelativeSource={RelativeSource AncestorType=Window}}"
                              IsSynchronizedWithCurrentItem ="False"
                          >
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Button Grid.Row ="1"
                            Grid.Column="1"
                            Height="25"
                            Command="{Binding DataContext.AddCharacterToStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            >
                    Add
                </Button>
                <ListView DockPanel.Dock="Top"
                              Grid.Row ="1"
                              Grid.Column="3"
                              Margin="5"      
                              VerticalAlignment="Top" 
                              ItemsSource="{Binding Path=StoryCharacter}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id"
                                            Width="50" 
                                            DisplayMemberBinding="{Binding CharacterId}" />

                            <GridViewColumn Header="Character"
                                            Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="238"
                                                  SelectedValue="{Binding CharacterId, Mode=TwoWay}"
                                                  SelectedValuePath = "Id" 
                                                  DisplayMemberPath = "Name" 
                                                  IsEditable="True" 
                                                  ItemsSource="{Binding Path=DataContext.CharacterView.Items, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  IsSynchronizedWithCurrentItem ="False"
                                                  >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Grid.Row ="3"
                            Grid.Column="1"
                            Height="25"
                            Command="{Binding DataContext.AddArtistToStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            >
                    Add
                </Button>
                <ListView DockPanel.Dock="Top"
                              Grid.Row ="3"                              
                              Grid.Column="3"
                              Margin="5"
                              VerticalAlignment="Top" 
                              ItemsSource="{Binding Path=StoryArtist}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id"
                                            Width="50" 
                                            DisplayMemberBinding="{Binding ArtistId}" />

                            <GridViewColumn Header="Artist"
                                            Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="238"
                                                  SelectedValue="{Binding ArtistId, Mode=TwoWay}"
                                                  SelectedValuePath = "Id" 
                                                  DisplayMemberPath = "Name" 
                                                  IsEditable="True" 
                                                  ItemsSource="{Binding Path=DataContext.ArtistView.Items, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  IsSynchronizedWithCurrentItem ="False"
                                                  >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Role" 
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox IsEditable="True"
                                                  IsReadOnly="True"
                                                  Width="138"
                                                  ItemsSource="{Binding Path=Roles}"
                                                  Text="{Binding ArtistType, Converter={StaticResource ArrayConverter}}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate DataType="{x:Type vm:RoleType}">
                                                    <CheckBox Content="{Binding Name}"
                                                              IsChecked="{Binding Checked}"
                                                              />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Grid.Row ="5"
                            Grid.Column="1"
                            Height="25"
                            Command="{Binding DataContext.AddBookToStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            >
                    Add
                </Button>
                <ListView DockPanel.Dock="Top"
                              Grid.Row ="5"
                              Grid.Column="3"                        
                              Margin="5" 
                              VerticalAlignment="Top" 
                              ItemsSource="{Binding Path=StoryBook}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id"
                                            Width="50" 
                                            DisplayMemberBinding="{Binding BookId}" />

                            <GridViewColumn Header="Book"
                                            Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="238"
                                                  SelectedValue="{Binding BookId, Mode=TwoWay}"
                                                  SelectedValuePath = "Id" 
                                                  DisplayMemberPath = "Name" 
                                                  IsEditable="True" 
                                                  ItemsSource="{Binding Path=DataContext.BookView.Items, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  IsSynchronizedWithCurrentItem ="False"
                                                  >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </DockPanel>
</Window>